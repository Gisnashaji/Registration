@model Test.Models.Student


<link rel="stylesheet" href="~/css/Registration.css" asp-append-version="true" />

    
        
<section>
     <div class="mt-4">
            <div class="d-flex justify-content-center align-items-center gg">
                <div class="container mb-3">
                <header><b>REGISTRATION</b></header>
                    <form asp-action="Success" class="form" method="post" enctype="multipart/form-data">
                        <div class="d-flex gap-4">
                            <div class="input-box">
                                <label asp-for="FirstName">First Name</label>
                                <input type="text" asp-for="FirstName"  />
                            <span asp-validation-for="FirstName"></span>
                            </div>
                            <div class="input-box">
                                <label asp-for="LastName">Last Name</label>
                                <input type="text" asp-for="LastName" required />
                            <span asp-validation-for="LastName"></span>
                            </div>
                        </div>

                    <div class="gender-box gap-4">
                            <label class="form-label" asp-for="Gender">Gender</label>
                            <div class="d-flex gap-4">
                                <div class="form-check">
                                    <input type="radio" asp-for="Gender" id="male" name="gender" value="Male" class="form-check-input" required />
                                    <label for="male" class="form-check-label">Male</label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" asp-for="Gender" id="female" name="gender" value="Female" class="form-check-input" required />
                                    <label for="female" class="form-check-label">Female</label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" asp-for="Gender" id="others" name="gender" value="Others" class="form-check-input" required />
                                    <label for="others" class="form-check-label">Others</label>
                                </div>
                                <span asp-validation-for="Gender"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-4">
                            <div class="input-box">
                                <label asp-for="DateofBirth">Date of Birth</label>
                                <input type="date" asp-for="DateofBirth" required/>
                            <span asp-validation-for="DateofBirth"></span>
                            </div>
                            <div class="input-box">
                                <label asp-for="Email">Email</label>
                                <input type="email" asp-for="Email"  required />
                            <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="d-flex gap-4">
                            <div class="input-box">
                                <label asp-for="PhoneNumber">Phone Number</label>
                                <input type="number" asp-for="PhoneNumber"  required />
                            <span asp-validation-for="PhoneNumber"></span>
                            </div>
                        <div class="input-box">
                            <label asp-for="Age">Age</label>
                            <input type="number" asp-for="Age" required />
                            <span asp-validation-for="Age"></span>
                        </div>
                        </div>
                    <div class="d-flex gap-4">
                        <div class="input-box">
                            <label asp-for="Password"> Password</label>
                            <input type="password" asp-for="Password" />
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="input-box">
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <input type="password" asp-for="ConfirmPassword" required />
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>

                    
                        

                    
                        <div class="input-field gap-5">
                            <input type="submit" class="submit" value=" Register">
                        </div>
                    
                    </form>
                </div>
            </div>
        </div>
</section>


    